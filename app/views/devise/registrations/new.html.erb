<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :お名前 %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :フリカナ %><br/>
    <%= f.text_field :kana%>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br/>
    <%= f.email_field :email%>
  </div>

  <div class="field">
    <%= f.label :生年月日 %><br>
    <%= f.text_field :b_year%>年
    <%= f.text_field :b_month%>月
    <%= f.text_field :b_day%>日
  </div>

  <div>
   <%= f.label :sex, "性別" %><br>
          <%= f.radio_button :sex, 1 %> <%= f.label :sex, "男性" %><br>
          <%= f.radio_button :sex, 2 %> <%= f.label :sex, "女性" %><br>
  </div>

  <div class="field">
    <%= f.label :郵便番号 %><br/>
    〒<%= f.text_field :postalcode1%>ー
    <%= f.text_field :postalcode2%>
  </div>

  <div class="field">
    <%= f.label :住所 %><br/>
    <%= f.text_field :address%>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <!-- <em>(<%= @minimum_password_length %> characters minimum)</em> -->
    <em>(最低８文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :パスワード確認 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
