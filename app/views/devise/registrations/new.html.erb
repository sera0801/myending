<div class= "contents">

<div class= "devise_div">
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  </br>
  <div class="field">
    <%= f.label :お名前 %><br />
    <%= f.text_field :name, autofocus: true, class: "input_box" %>
  </div></br>

  <div class="field">
    <%= f.label :フリカナ %><br/>
    <%= f.text_field :kana, class: "input_box"%>
  </div></br>

  <div class="field">
    <%= f.label :メールアドレス %><br/>
    <%= f.email_field :email, class: "input_box"%>
  </div></br>

  <div class="field">
    <%= f.label :生年月日 %><br>
    <%= f.text_field :b_year, style: "width: 100px", class: "input_box"%>年
    <%= f.text_field :b_month, style: "width: 50px", class: "input_box"%>月
    <%= f.text_field :b_day, style: "width: 50px", class: "input_box"%>日
  </div></br>

  <div>
   <%= f.label :sex, "性別" %><br>
          <%= f.radio_button :sex, 1 %> <%= f.label :sex, "男性" %><br>
          <%= f.radio_button :sex, 2 %> <%= f.label :sex, "女性" %><br>
  </div></br>

  <div class="field">
    <%= f.label :郵便番号 %><br/>
    〒<%= f.text_field :postalcode1, class: "input_box", style: "width: 100px"%>ー
    <%= f.text_field :postalcode2, class: "input_box", style: "width: 100px"%>
  </div></br>

  <div class="field">
    <%= f.label :住所 %><br/>
    <%= f.text_field :address, class: "input_box" %>
  </div></br>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <!-- <em>(<%= @minimum_password_length %> characters minimum)</em> -->
    <em>(最低８文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "input_box" %>
  </div></br>

  <div class="field">
    <%= f.label :パスワード確認 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "input_box" %>
  </div></br>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-primary" %>
  </div></br>
<% end %>

<%= render "devise/shared/links" %>

  </div>
  </div>
