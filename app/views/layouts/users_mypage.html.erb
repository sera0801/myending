              <li>
                <a href="/users/<%= current_user.id %>"> <%= current_user.name %> さま</a><span style="margin-right: 1em;"></span>
              </li>
              <li>
                <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "emphasis_box" %>
              </li>
          </ul>
        </div>
      </div>



     <div class= "clearfix">
        <div class= "float_right header_div">
            <ul>
                <li><a href="/users/<%= current_user.id %>/pictures">写真</a></li>

                <li><span style="margin-right: 1em;"></span>/<span style="margin-right: 1em;"></span>
                <% if current_user.form.present? %>
                  <a href="/users/<%= current_user.id %>/form">Ending Form</a>
                <% else %>
                  <a href="/users/<%= current_user.id %>/form/new">Ending Form</a>
                <% end %>
                </li>
                <li><span style="margin-right: 1em;"></span>/<span style="margin-right: 1em;"></span><a href="/users/<%= current_user.id %>/messageposts">メッセージ</a></li>
            </ul>
        </div>

  </header>

  <%= yield %>


