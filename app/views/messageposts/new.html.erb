

<div class= "messageposts_new">
    <%= form_for [@user, @messagepost] do |f| %>
        <div>
          <%= f.label :dear, "あて名" %></br>
          <%= f.text_field :dear, placeholder: "あて名", class: "input_box"%>
        </div>
        <div >
          <%= f.label :text, "メッセージ" %></br>
          <%= f.text_area :text, placeholder: "メッセージ", class: "input_box input_box_size" %>
        </div>
        <div>
          <%= f.submit "保存", class: "btn btn-primary btn-lg" %>
        </div>
    <% end %>
</div>