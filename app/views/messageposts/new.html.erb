<div class="users_content">

<% if @messagepost.errors.any? %>
<ul>
    <% @messagepost.errors.full_messages.each do |msg| %>
      <li style= "list-style-type:none; color: red; margin: 30px 0 0 0;"><%= msg %></li>
    <% end %>
</ul>
<% end %>


<div class= "messageposts_new contents">
    <%= form_for [@user, @messagepost] do |f| %>
        <div>
          <%= f.label :dear, "あて名" %></br>
          <%= f.text_field :dear, placeholder: "あて名", class: "input_box"%>
        </div>
        <div >
          <%= f.label :text, "メッセージ" %></br>
          <%= f.text_area :text, placeholder: "メッセージ", class: "input_box input_box_size" %>
        </div>
        <div class= "btn_position2">
          <%= f.submit "保存", class: "btn btn-primary btn-lg" %>
        </div>
    <% end %>
</div>
</div>