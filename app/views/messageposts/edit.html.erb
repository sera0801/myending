 <div class= "messageposts_edit">
    <%= form_for [@user, @messagepost] do |f| %>
        <div >
          <%= f.label :dear, "あて名" %></br>
          <%= f.text_field :dear, placeholder: "#{@messagepost.dear}", class: "input_box"%>
        </div>
        <div >
          <%= f.label :text, "メッセージ" %></br>
          <%= f.text_area :text, placeholder: "#{@messagepost.text}", class: "input_box input_box_size"%>
        </div>
        <div>
          <%= f.submit "保存", class: "btn btn-primary btn-lg" %>
        </div>
    <% end %>
</div>