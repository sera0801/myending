<div class="users_content">

<% if @picture.errors.any? %>
<ul>
    <% @picture.errors.full_messages.each do |msg| %>
      <li style= "list-style-type:none; color: red; margin: 30px 0 0 0;"><%= msg %></li>
    <% end %>
</ul>
<% end %>


<div class= "picture_new contents">
    <%= form_for [@user, @picture] do |f| %>
        <div >
          <%= f.label :title, "タイトル" %></br>
          <%= f.text_field :title, placeholder: "タイトル", class: "input_box"%>
        </div>
        <div >
           <%= f.label :portrait, "写真" %></br>
           <%= f.file_field :portrait %>
        </div>
        <div>
          <%= f.submit "保存", class: "btn btn-primary" %>
        </div>
    <% end %>
</div>
</div>